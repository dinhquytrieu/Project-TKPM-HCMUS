<section class="sales-page container">
  <section class='row justify-content-center'>
    {{>sales-page}}
    <section class='dashboard col-10'>
      <h1 class='dashboard-breadcrumb mb-4 text-center text-uppercase fw-bold'>
        Dashboard
      </h1>
      <section class="dashboard-general col-8 mx-auto">
        <ul class="dashboard-general-list row gx-4 mb-5">
          <li class="dashboard-general-item col d-flex flex-column align-items-center bg-light p-3 rounded-3 shadow-sm mx-2">
            <p class="dashboard-general-title d-flex align-items-center">
              <i class="fa-solid fa-money-bill-wave text-center me-2"></i>
              <span>Total Income</span>
            </p>
            <p class="dashboard-general-content fw-bold">{{convertMoney _income}}</p>
          </li>
          <li class="dashboard-general-item col d-flex flex-column align-items-center bg-light p-3 rounded-3 shadow-sm mx-2">
            <p class="dashboard-general-title d-flex align-items-center">
              <i class="fa-solid fa-truck text-center me-2"></i>
              <span>Total Orders</span>
            </p>
            <p class="dashboard-general-content fw-bold">{{_order}}</p>
          </li>
          <li class="dashboard-general-item col d-flex flex-column align-items-center bg-light p-3 rounded-3 shadow-sm mx-2">
            <p class="dashboard-general-title d-flex align-items-center">
              <i class="fa-solid fa-box-open text-center me-2"></i>
              <span>Total Stock</span>
            </p>
            <p class="dashboard-general-content fw-bold">{{_stock}}</p>
          </li>
        </ul>
        <ul class="dashboard-general-list row gx-4 mb-5">
          <li class="dashboard-general-item col d-flex flex-column align-items-center bg-light p-3 rounded-3 shadow-sm mx-2">
            <p class="dashboard-general-title d-flex align-items-center">
              <i class="fa-solid fa-comments text-center me-2"></i>
              <span>Total Reviews</span>
            </p>
            <p class="dashboard-general-content fw-bold">{{_review}}</p>
          </li>
          <li class="dashboard-general-item col d-flex flex-column align-items-center bg-light p-3 rounded-3 shadow-sm mx-2">
            <p class="dashboard-general-title d-flex align-items-center">
              <i class="fa-sharp fa-solid fa-badge-check text-center me-2"></i>
              <span>Successful Orders</span>
            </p>
            <p class="dashboard-general-content fw-bold">{{_sucOrder}}</p>
          </li>
          <li class="dashboard-general-item col d-flex flex-column align-items-center bg-light p-3 rounded-3 shadow-sm mx-2">
            <p class="dashboard-general-title d-flex align-items-center">
              <i class="fa-solid fa-star text-center me-2"></i>
              <span>Average Rating</span>
            </p>
            <p class="dashboard-general-content fw-bold">{{_rating}}</p>
          </li>
        </ul>
      </section>
      
      <section class="d-flex align-items-center justify-content-center mt-5">
        <div class="pie animate no-round rounded-circle shadow" style="--p:{{_percent}}; font-size: 2.5rem; margin: 0 3rem;"> {{_percent}}%</div>
        <section id="skills" class="w-50">
          <article class="skills">
            <div class="t-6">
              <p>{{_document}} documents<span></span><span class="skills bg-success" style="width: {{calcPercent _document _stock}}%;"></span></p>
            </div>
            <div class="t-6">
              <p>{{_uniform}} uniforms<span></span><span class="skills bg-primary" style="width: {{calcPercent _uniform _stock}}%;"></span></p>
            </div>
            <div class="t-6">
              <p>{{_stationery}} stationeries<span></span><span class="skills bg-info" style="width: {{calcPercent _stationery _stock}}%;"></span></p>
            </div>
            <div class="t-6">
              <p>{{_other}} others<span></span><span class="skills bg-warning" style="width: {{calcPercent _other _stock}}%;"></span></p>
            </div>
          </article>
        </section>
      </section>
    </section>
  </section>
</section>

<script>
  document.querySelectorAll('.skills span').forEach((skill) => {
    skill.parentElement.style.display = 'flex';
    skill.parentElement.style.justifyContent = 'space-between';
  });
</script>
